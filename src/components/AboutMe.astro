---
import Card from "./Card/index.astro";
import ProyectLayout from "../layouts/ProyectLayout.astro";
import Summary from "../components/ResumeCards/Summary.astro";
import Education from "../components/ResumeCards/Education.astro";
import TechnicalSkills from "../components/ResumeCards/TechnicalSkills.astro";
import Experience from "../components/ResumeCards/Experience.astro";
import Leadership from "../components/ResumeCards/Leadership.astro";
import RelatedProjects from "../components/ResumeCards/RelatedProjects.astro";

const CardCollapsed = `
  <div class="flex flex-col gap-2">
    <div class="text-sm font-light">
      <p>
        Hi, I'm Gabriel A. Baquero Sanchez, a junior Computer Engineering student from The Woodlands, Texas.
        <br />
        My primary tools of choice include:
      </p>
      <ul class="list-disc list-inside">
        <li>KiCAD</li>
        <li>Altium</li>
        <li>MATLAB</li>
        <li>SolidWorks</li>
        <li>C</li>
        <li>C++</li>
        <li>Python</li>
      </ul>
    </div>
    <p class="text-sm font-light">
      I'm passionate about robotics, space exploration, and VLSI design. I enjoy working on projects that combine engineering and creativity.
    </p>
    <p class="text-sm font-light">
      I strive to apply the best tools and solutions for each project, constantly learning and adapting to new challenges.
    </p>
  </div>
`;
---
<Card 
  title="About me"
  colSpan="md:col-span-1" 
  rowSpan="md:row-span-6"
  body={CardCollapsed}
  expandable={true}
>
  <div slot="expanded">
    <ProyectLayout title="My Resume" description="">
      <main class="relative text-white m-auto p-5 grid gap-4 max-w-6xl sm:grid-cols-8 lg:grid-cols-4">
        <Summary />
        <Education />
        <TechnicalSkills />
        <Experience />
        <Leadership />
        <RelatedProjects />
      </main>
    </ProyectLayout>
  </div> 
</Card>